<h1>Listing articles</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
<!--      <td><%#= link_to 'Show', articles_show_path(article) %></td>-->
<!--      <td><%#= link_to 'Edit', articles_edit_path(article) %></td>-->
      <td><%= link_to 'Show', articles_show_path(:id => article.id) %></td>
      <td><%= link_to 'Edit', articles_edit_path(:id =>article.id) %></td>
      <td><%= link_to 'Destroy', articles_destroy_path(:id =>article.id),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New article', articles_new_path %>
